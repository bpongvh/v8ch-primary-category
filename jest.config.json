{
	"collectCoverageFrom": [
		"src/**/*.js?(x)",
		"!**/node_modules/**",
		"!**/__test__/**"
	],
	"moduleDirectories": [
		"node_modules",
		"src/scripts/tests/mocks"
	],
	"moduleNameMapper": {
		"@wordpress\\/element": "<rootDir>/node_modules/gutenberg/packages/element",
		"@wordpress\\/keycodes": "<rootDir>/node_modules/gutenberg/packages/keycodes"
	},
	"setupFiles": ["./src/scripts/tests/setup/globals"],
	"testMatch": ["**/__tests__/**/?(*.)+(spec|test).js?(x)"],
	"testPathIgnorePatterns": ["/node_modules/"],
	"transformIgnorePatterns": ["node_modules/(?!(gutenberg)/)"]
}